<%= content_for :title do %>Checkout<% end %>

<%= content_for :body do %>

  <p id="notice"><%= notice %></p>

  <table class="table">
    <thead>
      <tr>
        <th>Cod</th>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% if @cart.respond_to?("each") %>
        <% @cart.each do |product| %>
          <tr>
            <td><%= product.cod %></td>
            <td><%= product.name %></td>
            <td><%= product.price %></td>
            <td><%= product.quantity %></td>
        <% end %>
      <% else %>
        <tr>
          <td><%= @cart.cod %></td>
          <td><%= @cart.name %></td>
          <td><%= @cart.price %></td>
          <td><%= @cart.quantity %></td>
        </tr>
      <% end %>
    </tbody>

    <% if @total_price %>
      <tr>
        <td>TOTAL: R$ <%= @total_price %></td>
      </tr>
    <% else %>
      <tr>
        <td>TOTAL: R$ 0</td>
      </tr>
    <% end %>
  </table>

  <br>

  <%= link_to 'Return to cart', carts_path, class: 'button is-primary' %>
  <%= link_to 'Finish your order', checkout_finish_order_path, class: 'button is-success' %>

<% end %>