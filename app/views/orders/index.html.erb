<%= content_for :body do %>

  <p id="notice"><%= notice %></p>

  <h1>Orders</h1>

  <table>
    <thead>
      <tr>
        <th>Cod</th>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Total</th>
        <th>Person</th>
        <th>Cart</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.cod %></td>
          <td><%= order.name %></td>
          <td><%= order.price %></td>
          <td><%= order.quantity %></td>
          <td><%= order.total %></td>
          <td><%= order.person %></td>
          <td><%= order.cart %></td>
          <td><%= link_to 'Show', order %></td>
          <td><%= link_to 'Edit', edit_order_path(order) %></td>
          <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Order', new_order_path %>

<% end %>