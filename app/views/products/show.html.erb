<%= content_for :body do %>

  <p id="notice"><%= notice %></p>

  <p>
    <strong>Cod:</strong>
    <%= @product.cod %>
  </p>

  <p>
    <strong>Name:</strong>
    <%= @product.name %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= @product.price %>
  </p>

  <p>
    <strong>Image:</strong>
    <%= @product.image %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= @product.category %>
  </p>

  <%= link_to 'Edit', edit_product_path(@product), class: "waves-effect waves-light btn" %> |
  <%= link_to 'Back', products_path, class: "waves-effect waves-light btn" %>

<% end %>