<%= content_for :body do %>

  <p id="notice"><%= notice %></p>

  <table class="table">
    <thead>
      <tr>
        <th>Cod</th>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Person</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @cart.each do |cart| %>
        <tr>
          <td><%= cart.cod %></td>
          <td><%= cart.name %></td>
          <td><%= cart.price %></td>
          <td><%= cart.quantity %></td>
          <td><%= cart.person %></td>
          <td><%= link_to 'Destroy', cart, method: :delete %></td>
        </tr>
      <% end %>
    </tbody>

    <% if @total_price %>
      <tr>
        <td>TOTAL: R$ <%= @total_price %></td>
      </tr>
    <% else %>
      <tr>
        <td>TOTAL: R$ 0</td>
      </tr>
    <% end %>
  </table>

  <br>

  <%= link_to 'Continue to shopping', categories_path, class: 'button is-primary' %>

<% end %>