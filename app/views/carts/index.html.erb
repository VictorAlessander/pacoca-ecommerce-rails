<%= content_for :body do %>

  <p id="notice"><%= notice %></p>

  <h1>Carts</h1>

  <table>
    <thead>
      <tr>
        <th>Cod</th>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Total</th>
        <th>Person</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @carts.each do |cart| %>
        <tr>
          <td><%= cart.cod %></td>
          <td><%= cart.name %></td>
          <td><%= cart.price %></td>
          <td><%= cart.quantity %></td>
          <td><%= cart.total %></td>
          <td><%= cart.person %></td>
          <td><%= link_to 'Show', cart, class: "waves-effect waves-light btn" %></td>
          <td><%= link_to 'Edit', edit_cart_path(cart), class: "waves-effect waves-light btn" %></td>
          <td><%= link_to 'Destroy', cart, class: "waves-effect waves-light btn" method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Cart', new_cart_path, class: "waves-effect waves-light btn" %>

<% end %>