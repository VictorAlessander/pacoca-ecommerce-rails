<%= content_for :title do %>Cart<% end %>

<%= content_for :body do %>

  <p id="notice"><%= notice %></p>

  <table class="table">
    <thead>
      <tr>
        <th>Cod</th>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @cart.each do |cart| %>
        <tr>
          <td><%= cart.cod %></td>
          <td><%= cart.name %></td>
          <td><%= cart.price %></td>
          <td><%= cart.quantity %></td>
          <td>
            <%= link_to '+', {controller: 'carts', action: 'increment_product', product_cod: cart.cod}, class: 'button is-primary' %>
            <%= link_to '-', {controller: 'carts', action: 'decrement_product', product_cod: cart.cod}, class: 'button is-primary' %>
          </td>
          <td><%= link_to 'Destroy', cart, method: :delete, class: 'button is-danger' %></td>
        </tr>
      <% end %>
    </tbody>

    <% if @total_price %>
      <tr>
        <td>TOTAL: R$ <%= @total_price %></td>
      </tr>
    <% else %>
      <tr>
        <td>TOTAL: R$ 0</td>
      </tr>
    <% end %>
  </table>

  <br>

  <%= link_to 'Continue to shopping', categories_path, class: 'button is-primary' %>
  <%= link_to 'Proceed to checkout', checkout_carts_path, class: 'button is-success' %>

<% end %>