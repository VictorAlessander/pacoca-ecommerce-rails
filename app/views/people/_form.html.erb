<%= form_with(model: person, local: true) do |form| %>
  <% if person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% person.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :person_name %>
  </div>

  <div class="field">
    <%= form.label :birthday %>
    <%= form.date_select :birthday, id: :person_birthday, class: 'input' %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :person_email %>
  </div>

  <%= form.fields_for :address do |address_fields| %>
    <div class="field">
      <%= form.label :street, class: 'label' %>
      <%= address_fields.text_field :street, class: 'input' %>
    </div>
    <div class="field">
      <%= form.label :cep, class: 'label' %>
      <%= address_fields.text_field :cep, class: 'input' %>
    </div>
    <div class="field">
      <%= form.label :city, class: 'label' %>
      <%= address_fields.text_field :city, class: 'input' %>
    </div>
    <div class="field">
      <%= form.label :state, class: 'label' %>
      <%= address_fields.select :state, options_for_states(@person.address.state) %>
    </div>
  <% end %>

  <div id="phones">
    <%= link_to_add_association('[Add Phone]', form, :phones, form_name: 'form') %>

    <%= form.fields_for :phones do |phones_fields| %>
      <%= render partial: "phone_fields", locals: {form: phones_fields} %>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
