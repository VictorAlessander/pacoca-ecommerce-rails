<%= content_for :body do %>

  <p id="notice"><%= notice %></p>

  <% @categories.each_slice(4) do |categories| %>
    <div class="columns">
      <% categories.each do |category| %>
        <div class="column is-one-quarter">
          <%= link_to "#{category.name}", {controller: "products", action: "index", category_id: category.id}, class: 'button is-primary' %>
        </div>
      <% end %>
    </div>
  <% end %>

<% end %>