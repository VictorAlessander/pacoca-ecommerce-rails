<%= content_for :body do %>

	<p id="notice"><%= notice %></p>

	<p>
	  <strong>Cod:</strong>
	  <%= @category.cod %>
	</p>

	<p>
	  <strong>Name:</strong>
	  <%= @category.name %>
	</p>

	<%= link_to 'Edit', edit_category_path(@category), class: "waves-effect waves-light btn" %> |
	<%= link_to 'Back', categories_path, class: "waves-effect waves-light btn" %>

<% end %>